<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="io.toka.android.login"
    android:background="#FF852B">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/Toka"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/toka_logo_white_300ppi" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/Username"
        android:layout_below="@+id/Toka"
        android:layout_alignRight="@+id/Password"
        android:layout_alignEnd="@+id/Password"
        android:layout_alignLeft="@+id/Password"
        android:layout_alignStart="@+id/Password"
        android:background="#FFF"
        android:editable="true"
        android:hint="Username"
        android:layout_marginTop="0dp"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="#d3d3d3"
        android:focusable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Password"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:background="#FFF"
        android:clickable="true"
        android:editable="true"
        android:focusable="true"
        android:hint="Password"
        android:password="true"
        android:layout_below="@+id/Username"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textColorHint="#d3d3d3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/SignIn"
        android:layout_below="@+id/Password"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:background="#FFAF57"
        android:layout_alignRight="@+id/Password"
        android:layout_alignEnd="@+id/Password"
        android:layout_alignLeft="@+id/Password"
        android:layout_alignStart="@+id/Password"
        android:focusable="true"
        android:enabled="true" />

</RelativeLayout>
